
.track-bg {
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #ddd
}

.track-input-block {
  flex: 1;
  background-color: #f6f6f6;
  border-radius: 35rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 10rpx 0 20rpx
}

.track-input-block label {
  font-size: 24rpx;
  left: 46rpx;
  top: 20rpx;
  color: #888;
}

.track-input {
  flex: 1;
  font-size: 28rpx;
  margin: 0 auto;
  text-align: left;
  padding: 0 20rpx
}

.search-icon{
  width: 35rpx;
  height: 35rpx;
}

.b-clear-icon{
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}