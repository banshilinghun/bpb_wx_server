
.track-bg {
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #ddd
}

.track-input-block {
  position: relative;
}

.track-input-block label {
  position: absolute;
  font-size: 24rpx;
  left: 46rpx;
  top: 20rpx;
  color: #888;
}

.track-input {
  background-color: #f6f6f6;
  width: 80%;
  border-radius: 35rpx;
  font-size: 28rpx;
  margin: 0 auto;
  height: 70rpx;
  text-align: left;
  padding: 0rpx 30rpx 0rpx 70rpx;
}

.search-icon{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 50rpx;
  top: 50%;
  transform: translateY(-50%)
}

.b-clear-icon{
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
  position: absolute;
  right: 35rpx;
  top: 50%;
  transform: translateY(-50%)
}