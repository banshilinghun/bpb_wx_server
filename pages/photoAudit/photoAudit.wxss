/* pages/photoAudit/photoAudit.wxss */

@import '../../common.wxss';

.root_container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.photo_container {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item_box {
  width: 50%;
  display: flex;
  flex-direction: column;
}

.item_text {
  font-size: 28rpx;
  color: #333;
  margin-left: 15rpx;
  margin-top: 50rpx;
}

.item_tips_text {
  font-size: 22rpx;
  margin-top: 10rpx;
  color: #666;
  margin-left: 15rpx;
  margin-right: 5rpx;
}

.item_image_box {
  position: relative;
  width: 100%;
  height: 330rpx;
  display: flex;
  justify-content: center;
}

.load_wraper {
  height: 100%;
  width: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(112, 112, 112, 0.8);
  position: absolute;
}

.image_placeholder_box {
  height: 100%;
  width: 90%;
  position: absolute;
}

.image_src_box {
  height: 100%;
  width: 90%;
  position: absolute;
}

.car_front_placeholder {
  background: url(https://wxapi.benpaobao.com/static/app_img/check_car_front.png) no-repeat;
  background-size: 100% 100%;
}

.car_inside_placeholder {
  background: url(https://wxapi.benpaobao.com/static/app_img/check_car_inner.png) no-repeat;
  background-size: 100% 100%;
}

.car_ouside_left_placeholder {
  background: url(https://wxapi.benpaobao.com/static/app_img/check_car_left.png) no-repeat;
  background-size: 100% 100%;
}

.car_ouside_right_placeholder {
  background: url(https://wxapi.benpaobao.com/static/app_img/check_car_right.png) no-repeat;
  background-size: 100% 100%;
}

.audit_commit {
  width: 90%;
  border: none;
  background-color: #ff555c;
  color: #fff;
  margin: 0rpx auto;
  margin-top: 80rpx;
}