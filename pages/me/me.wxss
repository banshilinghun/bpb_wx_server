
page{
  background: #f6f6f6;
}

.b-me-header{
  padding: 30rpx;
  background: #fff
}

.b-header-wrapper{
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
  background: linear-gradient(180deg, #ff555c, #FB653D);
  box-shadow: 0px 3px 10px #aaa
}

.b-header-user{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx
}

.b-header-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f6f6f6;
  box-shadow: 0 0 10rpx #ccc;
}

.b-header-detail{
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.b-server-name{
  color: #fff;
  font-size: 36rpx
}

.b-user-name{
  color: #fff;
  font-size: 28rpx
}

.b-user-palte{
  color: #fff;
  font-size: 24rpx;
  opacity: 0.8
}

.b-header-auth-status{
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx
}

.b-header-income{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
  box-sizing: border-box
}

.b-user-balance{
  flex: 1;
}

.b-balance-wrapper{
  text-align: center;
  color: #fff;
  position: relative;
}

.b-red-dot{
  position: absolute;
  background: #f00;
  width: 16rpx;
  height: 16rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  right: 40rpx;
  top: -15rpx
}

.b-balance-title{
  font-size: 24rpx
}

.b-balance-number{
  font-size: 36rpx;
  font-weight: 500;
  margin-top: 10rpx
}

.b-avg-time{
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 10rpx
}

.b-me-income{
  margin-top: 20rpx;
  background: #fff
}

.b-me-panel{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx
}

.b-panel-title{
  color: #333;
  font-size: 32rpx;
  font-family: "微软雅黑";
  font-weight: bold;
  flex: 1
}

.b--panel-right{
  color: #999;
  font-size: 24rpx;
  display: none
}

.b-me-cell{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap
}

.b-cell-item{
  width: 33.3%
}

.b-cell-wrapper{
  text-align: center;
  padding: 30rpx 0
}

.b-cell-image{
  width: 50rpx;
  height: 50rpx
}

.b-cell-action{
  color: #666;
  font-size: 24rpx
}

.switch-tab{
  width: 70rpx;
  height: 70rpx;
  background-color: #ff555c;
  opacity: 0.8;
  position: fixed;
  border-radius: 40rpx;
  right: 30rpx;
  bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.switch-icon{
  width: 50rpx;
  height: 50rpx;
}