
@import '../guide/guide.wxss';

page{
  background: #f6f6f6
}

/** radio start **/
list-root{
  width: 100%;
}
.apply-choice{
    width: 30rpx;
    height: 30rpx;
    margin-right: 12rpx;
    vertical-align: text-bottom;
}
view{
    font-size: 30rpx;
    font-weight: 300;
}
.body{
    padding: 25rpx 25rpx 0;
    background-color: #fff;
}
.radio-group{
    position: relative;
    /* display: flex; */
    width: 100%;
    height: 70rpx;
    color:#ff5a39;
    text-align:center;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.radio{
    display: inline-block;
    /* flex: 1; */
    height: 100%;
    border-color: #ff5a39;
    border-width: 1rpx 1rpx 1rpx 0;
    border-style: solid;
    color: #ff5a39;
    text-align: center;
    line-height: 70rpx;
    box-sizing: border-box;
    width: 24.88%
}
.radio:first-child{
    border-left: 1px solid #ff5a39;
    border-top-left-radius: 8rpx;
    border-bottom-left-radius: 8rpx;
}
.radio:last-child{
    border-top-right-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}
.radio-item{
    position: absolute;
    left: -99999rpx;
    top: -99999rpx;
    height: 0;
    width: 0;
    visibility: hidden;
}
.type-group{
    position: relative;
    width: 100%;
    text-align: justify;
    color:#695f9b;
    overflow: hidden;
}
.type-item{
    position: absolute;
    left: -99999rpx;
    top: -99999rpx;
    height: 0;
    width: 0;
    visibility: hidden;
}
.type-label{
    display: inline-block;
    margin:0 25rpx 25rpx;
    width: 137.5rpx;
    height: 65rpx;
    line-height: 65rpx;
    text-align: center;
    border-radius: 8rpx;
    border: 1px solid #ff5a39;
}
.active{
    background-color: #ff5a39;
    color: #fff;
    transition: all .3s;
}
.mar-top-60{
    margin-top: 60rpx;
}

/** radio end **/

.content-layout{
  width: 100%;
  position: relative;
  background-color: #f6f6f6;
}

.list-body{
  width: 100%;
  min-height: 100vh;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
  position: absolute;
}

.content-margin-wrapper{
  padding-bottom: 20rpx;
}

.switch-tab{
  width: 70rpx;
  height: 70rpx;
  background-color: #ff5a39;
  opacity: 0.8;
  position: fixed;
  border-radius: 40rpx;
  right: 30rpx;
  bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.switch-icon{
  width: 50rpx;
  height: 50rpx;
}

.empty-layout{
  position: absolute;
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-text{
  font-size: 30rpx;
  color: black;
  font-weight: 400;
  text-align: center;
}

.cell-wrapper{
  margin-top: 20rpx;
}

.b-task-wrapper{
  margin-top: 20rpx
}

.b-task-middle, .b-task-sign{
  width: 100%;
  padding: 20rpx;
  color: #333;
  background: #fff;
  text-align: center;
}

.b-task-finsh{
  display: flex;
  background: #fff;
  align-items: center
}

.b-finsh-number, .b-finish-time{
  flex: 1;
  text-align: center;
  padding: 20rpx
}

.b-task-search{
  padding: 0 20rpx;
  margin-top: 20rpx;
  background: #fff;
  display: flex;
  align-items: center
}

.b-search-container{
  flex: 1;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  position: relative
}

.b-search-wrapper{
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: 0 0 16rpx #ddd;
  padding: 5rpx 0 5rpx 20rpx;
  border: 1rpx solid #ddd;
  box-sizing: border-box;
  height: 60rpx;
  border-radius: 30rpx;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-50%)
}

.b-search-icon{
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx
}

.track-input {
  flex: 1;
  font-size: 26rpx;
  text-align: left;
  color: #666
}

.b-switch-btn{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  align-items: center;
  justify-content: center;
}

.b-switch-icon{
  width: 35rpx;
  height: 35rpx;
}

.b-switch-text{
  font-size: 20rpx;
  color: #333;
  margin-top: 5rpx
}

.b-search-clean{
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx 20rpx;
}